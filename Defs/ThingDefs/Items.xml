<Defs>
  <ThingDef ParentName="ResourceBase">
    <defName>WTH_MechanoidParts</defName>
    <label>mechanoid parts</label>
    <description>Parts scrapped from destroyed mechanoids. Needed for repairing and hacking mechanoids.</description>
    <graphicData>
      <texPath>Things/MechanoidParts</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>75</stackLimit>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <MarketValue>10</MarketValue>
      <Mass>0.6</Mass>
      <Flammability>1.0</Flammability>
	  <DeteriorationRate>2.0</DeteriorationRate>
	  <SellPriceFactor>0.5</SellPriceFactor>
	</statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
	<!-- this is added so it can be used for mineral scanner -->
	<building>
      <isResourceRock>false</isResourceRock>
      <mineableThing>WTH_MechanoidParts</mineableThing>
      <mineableYield>40</mineableYield>
      <mineableScatterCommonality>0.07</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>
        <min>2</min>
        <max>8</max>
      </mineableScatterLumpSizeRange>
    </building>
  </ThingDef>

