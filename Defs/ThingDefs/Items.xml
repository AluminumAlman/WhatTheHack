<Defs>
  <ThingDef ParentName="ResourceBase">
    <defName>WTH_MechanoidParts</defName>
    <label>mechanoid parts</label>
    <description>Parts scrapped from destroyed mechanoids. Needed for repairing and hacking mechanoids.</description>
    <graphicData>
      <texPath>Things/MechanoidParts</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>75</stackLimit>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <MarketValue>10</MarketValue>
      <Mass>0.6</Mass>
      <Flammability>1.0</Flammability>
	  <DeteriorationRate>2.0</DeteriorationRate>
	  <SellPriceFactor>0.5</SellPriceFactor>
	</statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>
  <ThingDef ParentName="ResourceBase">
    <defName>WTH_MechanoidChip</defName>
    <label>advanced mechanoid chip</label>
    <description>Advanced chips scavenged from downed or destroyed mechanoids. Needed for the more complicated hacking operations.</description>
    <graphicData>
      <texPath>Things/AIChip</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>75</stackLimit>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <MarketValue>55</MarketValue>
      <Mass>0.6</Mass>
      <Flammability>1.0</Flammability>
	  <DeteriorationRate>2.0</DeteriorationRate>
	  <SellPriceFactor>0.70</SellPriceFactor>
	</statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>
  
  <ThingDef ParentName="BodyPartBase">
    <defName>WTH_RepairModule</defName>
    <label>repair module</label>
    <description>Can be installed in mechanoids to give them the ability to repair themselves on the field.</description>
    <graphicData>
      <texPath>Things/RepairModule</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>1</stackLimit>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <MarketValue>300</MarketValue>
      <Mass>0.6</Mass>
      <Flammability>1.0</Flammability>
	  <DeteriorationRate>2.0</DeteriorationRate>
	  <SellPriceFactor>0.70</SellPriceFactor>
	</statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>
  <ThingDef ParentName="BodyPartBase">
    <defName>WTH_RepairArm</defName>
    <label>repair arm</label>
    <description>Can be installed in mechanoid with a repair module to give them the ability to repair any other mechanoid on the field.</description>
    <graphicData>
      <texPath>Things/RepairArm</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>1</stackLimit>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <MarketValue>300</MarketValue>
      <Mass>0.6</Mass>
      <Flammability>1.0</Flammability>
	  <DeteriorationRate>2.0</DeteriorationRate>
	  <SellPriceFactor>0.70</SellPriceFactor>
	</statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>
  
</Defs>